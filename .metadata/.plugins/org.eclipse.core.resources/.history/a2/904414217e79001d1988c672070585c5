package logicalprogrampractice;

public class ReverseTheNumberwithString {

	public static void main(String[] args) 
	{
		int a=3456;
		
		String stringNum = Integer.toString(a);
		
		String reverse="";
		
		for(int i=stringNum.length()-1;i>=0;i--)
		{
			char t = stringNum.charAt(i);
			
			reverse=reverse+t;
		}
		System.out.println("Reverse number in string "+reverse); //this number will print in string we have to convert it in integer
		
		int reverseNum = Integer.parseInt(reverse);
		
		System.out.println("original number is "+a);
		
		System.out.println("Reverse number is "+reverseNum);
		
		
	}

}
